{
	"name": "searchFlights",
	"description": "获取两个城市之间（用户给出的是机场编码信息）的航班信息",
	"parameters": {
		"type": "object",
		"properties": {
			"sourceAirportCode": {
				"type": "string",
				"description": "出发机场的机场编码"
			},
			"destinationAirportCode": {
				"type": "string",
				"description": "到达机场的机场编码"
			},
			"date": {
				"type": "string",
				"description": "所查询的航班时间，日期格式为：YYYY-MM-DD"
			}
		},
		"required": ["sourceAirportCode", "destinationAirportCode", "date"]
	},
	"responses": {
		"type": "object",
		"properties": {
			"originStationCode": {
				"type": "string",
				"description": "出发机场的机场编码"
			},
			"destinationStationCode": {
				"type": "string",
				"description": "到达机场的机场编码"
			},
			"equipmentId": {
				"type": "string",
				"description": "航班名称"
			},
			"flightNumber": {
				"type": "string",
				"description": "航班飞行编号"
			},
			"distanceInKM": {
				"type": "string",
				"description": "航班飞行距离，单位公里"
			},
			"departureDateTime": {
				"type": "string",
				"description": "航班起飞时间"
			},
			"arrivalDateTime": {
				"type": "string",
				"description": "航班到达时间"
			}
		},
		"required": ["originStationCode", "destinationStationCode", "equipmentId", "flightNumber", "distanceInKM", "departureDateTime", "arrivalDateTime"]
	}
}
