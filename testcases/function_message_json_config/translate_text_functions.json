{
	"name": "translateText",
	"description": "翻译某一段文本",
	"parameters": {
		"type": "object",
		"properties": {
			"text": {
				"type": "string",
				"description": "要翻译的文本"
			}
		},
		"required": ["text"]
	},
	"responses": {
		"type": "object",
		"properties": {
			"sourceText": {
				"type": "string",
				"description": "输入文本内容"
			},
			"targetText": {
				"type": "string",
				"description": "翻译结果"
			},
			"source": {
				"type": "string",
				"description": "输入语言"
			},
			"target": {
				"type": "string",
				"description": "翻译语言"
			}
		},
		"required": ["sourceText", "targetText", "source", "target"]
	}
}
